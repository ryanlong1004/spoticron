{
  "app_name": "Spoticron",
  "version": "1.0.0",
  "description": "Spotify Analytics Tool for comprehensive listening analysis",

  "spotify_api": {
    "scopes": [
      "user-read-currently-playing",
      "user-read-recently-played",
      "user-top-read",
      "user-read-playback-state",
      "user-library-read",
      "playlist-read-private",
      "playlist-read-collaborative"
    ],
    "redirect_uri": "http://localhost:8080/callback",
    "token_cache_path": "data/cache/.spotify_token_cache"
  },

  "database": {
    "url": "sqlite:///data/spoticron.db",
    "backup_frequency_days": 7,
    "retention_days": 365
  },

  "analysis": {
    "default_time_range": "medium_term",
    "max_recent_tracks": 50,
    "max_top_items": 50,
    "monitoring_default_duration": 5,
    "monitoring_default_interval": 30
  },

  "output": {
    "export_format": "json",
    "export_directory": "data/exports",
    "backup_directory": "data/backups"
  },

  "features": {
    "live_stats": true,
    "historical_analysis": true,
    "data_export": true,
    "monitoring": true,
    "mood_analysis": true,
    "discovery_tracking": true
  }
}
