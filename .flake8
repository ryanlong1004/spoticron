[flake8]
max-line-length = 120
exclude = 
    venv,
    .venv,
    __pycache__,
    .git,
    *.egg-info,
    build,
    dist,
    .tox,
    node_modules
ignore = 
    # E203: whitespace before ':' (conflicts with black formatting)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503
per-file-ignores =
    # Tests can have longer lines and unused imports
    tests/*.py:F401,E501
    # __init__.py files often have unused imports
    __init__.py:F401