[MASTER]
# Python code to execute, usually for sys.path manipulation such as
# pygtk.require().
init-hook='import sys; sys.path.append(".")'

# Add files or directories to the blocklist. They should be base names, not paths.
ignore=tests,docs,build,dist,.git,__pycache__,venv,.venv

# Add files or directories matching the regex patterns to the blocklist.
ignore-patterns=.*_pb2\.py,.*\.pyi

[MESSAGES CONTROL]
# Disable specific warnings and errors that are expected in this project
disable=
    # Import issues (expected in development environment)
    import-error,
    no-member,

    # Dataclass complexity (acceptable for data models)
    too-many-instance-attributes,
    too-many-locals,

    # Variable naming conflicts (some acceptable in limited scope)
    redefined-outer-name,

    # Exception handling (some generic exceptions are acceptable)
    broad-exception-caught,

    # Import organization (some dynamic imports are necessary)
    import-outside-toplevel,

    # Code style preferences
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    line-too-long,

    # Type checking issues (expected with third-party libraries)
    no-value-for-parameter,
    unexpected-keyword-arg,

    # Design patterns
    too-few-public-methods,
    too-many-arguments,
    too-many-branches,
    too-many-statements,
    too-many-return-statements,

    # Code style (acceptable patterns)
    no-else-return,
    invalid-name,
    cell-var-from-loop,
    duplicate-code

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=120

# Number of spaces of indent required inside a hanging or continued line.
indent-after-paren=4

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=4

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

[TYPECHECK]
# List of module names for which member attributes should not be checked
ignored-modules=spotipy,sqlalchemy,dotenv,rich

# List of classes names for which member attributes should not be checked
ignored-classes=spotipy.Spotify,SQLAlchemy

[DESIGN]
# Maximum number of locals for function / method body
max-locals=20

# Maximum number of attributes for a class
max-attributes=15
